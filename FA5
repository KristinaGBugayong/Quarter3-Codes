steps = [
    [4500, 5200, 4800, 5000, 5300],
    [4000, 4100, 3900, 4200, 4600],
    [6000, 5800, 5900, 6100, 6200]
]

days = ["Mon", "Tue", "Wed", "Thu", "Fri"]

day_totals = []

for d in range(5):
    total = steps[0][d] + steps[1][d] + steps[2][d]
    day_totals.append(total)
    print(days[d], total)

highest = max(day_totals)
print("Most active day:", days[day_totals.index(highest)], highest)
